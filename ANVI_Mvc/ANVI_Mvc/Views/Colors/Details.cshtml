            <dt>
                @Html.DisplayNameFor(model => model.ColorID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ColorID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ColorName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ColorName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ColorID }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

