@model IEnumerable<ProductDetail>
@{
    Layout = "~/Views/Shared/_BackSystem_Layout.cshtml";
    ViewBag.Title = "庫存圖表";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>圖表</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">圖表</a></li>
                    <li class="active">庫存圖表</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-11">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-3">Product Detils Stock</h4>
                        <canvas id="StrockChart" style="width:100%; height:400px;"></canvas>
                    </div>
                </div><!-- /# card -->
            </div><!-- /# column -->
        </div><!-- /# row -->
    </div><!-- .animated -->
</div>

@section endJS{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>

    <script>
        var stctx = document.getElementById('StrockChart').getContext('2d');
        var chart = new Chart(stctx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(ViewBag.Labels)],
                datasets: [{
                    label: '數量',
                    data: [@ViewBag.Data],
                    backgroundColor: [@Html.Raw(ViewBag.BackgroundColor)],
                    borderColor: [@Html.Raw(ViewBag.BorderColor)],
                    borderWidth: 1
                }]
            }
        });
    </script>
}