@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_BackSystem_Layout.cshtml";
    ViewBag.Title = "後台帳戶註冊";
}
@section topCSS
{
    <link href="~/Assets/css/Register.css" rel="stylesheet" />
    <style>
        html {
            font-size:inherit;
        }
    </style>
}
<main id="main" role="main">
    <section>
        <div class="col-md-10">
            <div class="P-Content P-Content-fitS P-Content-exN">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @name = "create_customer", @class = "Form F-spaT", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <header class="Form-Header">
                        <h1 class="Heading u-h1">Back System Register</h1>
                        <p>Please fill in the information below:</p>
                    </header>
                    @Html.ValidationSummary("", new { @class = "Text-red" })
                    <div class="F-Item">
                        @Html.LabelFor(m => m.Email, new { @class = "F-FLabel" })
                        @*<input type="email" name="customer[email]" id="" placeholder="Email" class="F-Input">*@
                        @Html.TextBoxFor(m => m.Email, new { @name = "Email", @placeholder = "Email", @class = "F-Input" })
                        @*<label for="" class="F-FLabel">Email</label>*@
                    </div>

                    <div class="F-Item">
                        @Html.LabelFor(m => m.Password, new { @class = "F-FLabel" })
                        @*<input type="password" name="customer[password]" id="" placeholder="Password" class="F-Input">*@
                        @Html.PasswordFor(m => m.Password, new { @name = "Password", @placeholder = "Password", @class = "F-Input" })
                        @*<label for="" class="F-FLabel">Password</label>*@
                    </div>

                    <div class="F-Item">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "F-FLabel" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @name = "ConfirmPassword", @placeholder = "Chick Password", @class = "F-Input" })
                    </div>

                    <div class="F-Item">
                        @Html.LabelFor(m => m.Name, new { @class = "F-FLabel" })
                        @*<input type="email" name="customer[email]" id="" placeholder="Email" class="F-Input">*@
                        @Html.TextBoxFor(m => m.Name, new { @name = "Name", @placeholder = "Name", @class = "F-Input" })
                        @*<label for="" class="F-FLabel">Email</label>*@
                    </div>

                    <div class="F-Item">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "F-FLabel" })
                        @*<input type="password" name="customer[password]" id="" placeholder="Password" class="F-Input">*@
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @name = "PhoneNumber", @placeholder = "PhoneNumber", @class = "F-Input" })
                        @*<label for="" class="F-FLabel">Password</label>*@
                    </div>

                    <div class="F-Item">
                        @Html.LabelFor(m => m.RoleString, "RoleString", htmlAttributes: new { @class = "F-FLabel" })
                        @Html.DropDownList("RoleString", null, "", htmlAttributes: new { @class = "F-Input",@placeholder="-select-", @Value = "" })
                        @Html.ValidationMessageFor(m => m.RoleString, "", new { @class = "text-danger" })
                    </div>

                    @Html.HiddenFor(m => m.RoleString, new { @Value = "Admin" })

                    <button type="submit" class="F-Sub Btn-full Btn Btn-pmy" value="註冊">Create my account</button>
                }

            </div>
        </div>
    </section>
</main>
