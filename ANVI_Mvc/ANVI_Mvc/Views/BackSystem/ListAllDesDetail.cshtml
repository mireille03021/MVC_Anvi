@model IEnumerable<ANVI_Mvc.Models.DesDetail>

@{
    Layout = "~/Views/Shared/_BackSystem_Layout.cshtml";
    ViewBag.Title = "DesDetail";
    int i = 0;
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>產品</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">產品</a></li>
                    <li class="active">DesDetail</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <p>
                            @Html.ActionLink("Create New", "Create", "DesDetails")
                        </p>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table-export_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc text-center" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-sort="ascending" aria-label="@Html.DisplayNameFor(model => model.DDID): activate to sort column descending" style="width:52px; text-align:center;">
                                        @Html.DisplayNameFor(model => model.DDID)
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(model => model.Product.ProductName): activate to sort column ascending" style="width: 184px;">
                                        @Html.DisplayNameFor(model => model.Product.ProductName)
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(model => model.Detail): activate to sort column ascending" style="width: 280px;">
                                        @Html.DisplayNameFor(model => model.Detail)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    string classstring = string.Empty;
                                    if (i % 2 == 0)
                                    {
                                        classstring = "role=\"row\" class=\"even\"";
                                    }
                                    else
                                    {
                                        classstring = "role=\"row\" class=\"odd\"";
                                    }
                                    <tr @classstring>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DDID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Detail)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "DesDetails", new { id = item.DDID }, new { @class = "" }) |
                                            @Html.ActionLink("Details", "Details", "DesDetails", new { id = item.DDID }, new { @class = "" }) |
                                            @Html.ActionLink("Delete", "Delete", "DesDetails", new { id = item.DDID }, new { @class = "" })
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>

@section endJS{

    <script src="~/Assets/BackSystem/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Assets/BackSystem/vendors/datatables.net-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/Assets/BackSystem/assets/js/init-scripts/data-table/datatables-init.js"></script>
}

