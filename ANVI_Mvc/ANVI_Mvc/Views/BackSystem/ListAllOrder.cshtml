            @Html.ActionLink("Edit", "Edit", "Orders", new { id=item.OrderID }, new { @class = "" }) |
            @Html.ActionLink("Details", "Details", "Orders", new { id=item.OrderID }, new { @class = "" }) |
            @Html.ActionLink("Delete", "Delete", "Orders", new { id=item.OrderID }, new { @class = "" })
        </td>
    </tr>
}

</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @{
            int previous = (int)ViewData["PageActive"];
            int next = (int)ViewData["PageActive"];
            if ((int)ViewData["PageActive"] != 1)
            {
                --previous;
            }
            if ((int)ViewData["PageActive"] != (int)ViewData["Pages"])
            {
                ++next;
            }
        }
        <li class="page-item"><a class="page-link" href="/BackSystem/ListAllOrder/@previous">Previous</a></li>
        @for (int i = 1; i <= (int)ViewData["Pages"]; i++)
        {
            string active = i == (int)ViewData["PageActive"] ? "active" : "";

            <li class="page-item @active"><a class="page-link" href="/BackSystem/ListAllOrder/@i">@i</a></li>
        }
        <li class="page-item"><a class="page-link" href="/BackSystem/ListAllOrder/@next">Next</a></li>
    </ul>
</nav>
